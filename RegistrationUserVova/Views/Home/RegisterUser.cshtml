@model User
@{
    ViewData["Title"] = "User Registration";
}

<!DOCTYPE html>
<html lang="en">
    <style>

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
}

body {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background: url("https://raw.githubusercontent.com/DianaZayats/Eclipse-DNMV/diana-frontend/images/back.jpg");
    background-size: cover;
    background-position: bottom;
    background-repeat: no-repeat;
}

.form {
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 350px;
    background: rgba(255, 255, 255, 0.012);
    backdrop-filter: blur(20px);
    padding: 30px;
    border-radius: 20px;
    position: relative;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.25);
}

.title {
    font-size: 28px;
    font-weight: 600;
    color: #fff;
    letter-spacing: 0.3px;
    text-align: center;
    position: relative;
    margin-bottom: 10px;
}

.form label {
    position: relative;
}

    .form label input {
        width: 100%;
        padding: 10px 35px 20px 10px;
        outline: none;
        border: none;
        border-radius: 10px;
        color: #fff;
    }

        .form label input[type="text"],
        .form label input[type="password"],
        .form label input[type="email"] {
            background: rgba(255, 255, 255, 0.15);
        }

        .form label input + span {
            position: absolute;
            left: 10px;
            top: 15px;
            color: #fff;
            font-size: 0.9em;
            cursor: text;
            transition: 0.3s ease;
        }

        .form label input:placeholder-shown + span {
            top: 15px;
            font-size: 0.9em;
        }

        .form label input:valid + span {
            color: rgba(255, 255, 255, 0.7);
        }

        .form label input:focus + span,
        .form label input:valid + span {
            top: 30px;
            font-size: 0.7em;
            font-weight: 600;
        }

    .form label .icon {
        position: absolute;
        top: 50%;
        right: 7px;
        transform: translateY(-50%);
        color: #fff;
        cursor: pointer;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9;
    }

.check {
    display: flex;
    justify-content: space-between;
}

    .check label,
    .check a {
        margin: 5px 0;
        font-size: 14px;
        cursor: pointer;
    }

    .check label {
        display: flex;
        align-items: center;
        color: #fff;
        position: relative;
        padding-left: 20px;
    }

        .check label input {
            appearance: none;
            position: absolute;
            left: 0;
        }

            .check label input::before {
                content: '';
                display: flex;
                align-items: center;
                justify-content: center;
                height: 15px;
                width: 15px;
                border-radius: 4px;
                background: rgba(255, 255, 255, 0.15);
                color: #fff;
                position: absolute;
                top: 50%;
                left: 0;
                transform: translateY(-50%);
            }

            .check label input:checked::before {
                content: '\2714';
                background: rgba(255, 255, 255, 0.15);
            }

    .check a {
        text-decoration: none;
        color: #fff;
    }

        .check a:hover {
            text-decoration: underline;
        }

.btn {
    border: none;
    outline: none;
    background: rgba(255, 255, 255, 0.15);
    padding: 10px;
    border-radius: 10px;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
}

.signup {
    color: #fff;
    font-size: 14px;
    text-align: center;
}

    .signup a {
        color: #fff;
        text-decoration: none;
    }

        .signup a:hover {
            text-decoration: underline;
        }

    </style>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="signup.css" />
    <title>User Registration</title>
</head>

<body>
    <form autocomplete="off" class="form" method="post" asp-action="RegisterUser" asp-controller="Home">
        <h2 class="title">Sign up</h2>
        <label asp-for="Login">
            <span style="color: white">Login</span>
            <span class="icon">
                <i class="fa-regular fa-user"></i>
            </span>
            <input asp-for="Login" required />
        </label>
        <label asp-for="FirstName">
            <span style="color: white">FirstName</span>
            <span class="icon">
                <i class="fa-regular fa-user"></i>
            </span>
            <input asp-for="FirstName" required />
        </label>
        <label asp-for="LastName">
            <span style="color: white">LastName</span>
            <span class="icon">
                <i class="fa-regular fa-user"></i>
            </span>
            <input asp-for="LastName" required />
        </label>
        <label asp-for="Email">
            <span style="color: white">Email</span>
            <span class="icon">
                <i class="fa-regular fa-envelope"></i>
            </span>
            <input asp-for="Email" required />
        </label>
        <label asp-for="Password">
            <span style="color: white">Password</span>
            <span class="icon">
                <i class="fa-regular fa-eye-slash"></i>
            </span>
            <input asp-for="Password" required />
        </label>

        <button class="btn" type="submit">Sign up</button>
        <p class="signup">
            Already have an account?
            <a href="/Home/LoginUser">Log in</a>
        </p>
    </form>

    <script src="signup.js"></script>
</body>
</html>
