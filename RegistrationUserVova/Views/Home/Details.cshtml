@model User

<!DOCTYPE html>
<style>

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    display: flex;
    min-height: 100vh;
    background: url("https://raw.githubusercontent.com/DianaZayats/Eclipse-DNMV/diana-frontend/images/back.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.sidebar {
    width: 250px;
    background: rgba(255, 255, 255, 0.12);
    padding: 20px;
    min-height: 100vh;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(20px);
}

.menu {
    display: flex;
    flex-direction: column;
}

.menu-item {
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    text-decoration: none;
    color: #fff;
}

    .menu-item.active,
    .menu-item:hover {
        background: rgba(255, 255, 255, 0.12);
    }

.content {
    flex-grow: 1;
    padding: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.content-title {
    color: #fff;
    margin-bottom: 30px;
}

.info-card {
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 350px;
    background: rgba(255, 255, 255, 0.012);
    backdrop-filter: blur(20px);
    padding: 30px;
    border-radius: 20px;
    position: relative;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.25);
}

.info-title {
    color: #fff;
    text-align: center;
    margin-bottom: 20px;
}

.info-group {
    margin-bottom: 10px;
}

.info-label {
    color: #fff;
}

.info-value {
    background: rgba(255, 255, 255, 0.1);
    padding: 5px 10px;
    border-radius: 5px;
    color: #fff;
    margin-bottom: 5px;
}

.btn-change {
    border: none;
    outline: none;
    background: rgba(255, 255, 255, 0.15);
    padding: 10px;
    border-radius: 10px;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
}

.btn-create {
    border: none;
    outline: none;
    background: rgba(255, 255, 255, 0.15);
    padding: 10px;
    border-radius: 10px;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
}

.btn-delete {
    border: none;
    outline: none;
    background: rgba(255, 255, 255, 0.15);
    padding: 10px;
    border-radius: 10px;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
}

.btn-change:hover {
    background-color: rgba(255, 255, 255, 0.25);
}

.btn-delete:hover {
    background-color: rgba(255, 255, 255, 0.25);
}

media (max-width: 768px) {
    .sidebar {
        width: 100%;
        height: auto;
        padding: 10px;
    }

    .menu {
        flex-direction: row;
        justify-content: space-around;
    }

    .content {
        padding: 20px;
    }

    .info-card {
        width: auto;
    }
}

</style>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="personalinfo.css" />
    <title>Personal Info</title>
</head>
<body>
    <div class="content">
        <h1 class="content-title">Hello!</h1>
        <div class="info-card">
            <h2 class="info-title">Personal info</h2>
            <div class="info-group">
                <label class="info-label">First name</label>
                <div class="info-value">@Model.FirstName</div>
            </div>
            <div class="info-group">
                <label class="info-label">Last name</label>
                <div class="info-value">@Model.LastName</div>
            </div>
            <div class="info-group">
                <label class="info-label">Phone</label>
                <div class="info-value">@Model.PhoneNumber</div>
            </div>
            <div class="info-group">
                <label class="info-label">Email</label>
                <div class="info-value">@Model.Email</div>
            </div>
            <div class="info-group">
               <a href="@Url.Action("EditProfile", "Home", new { userId = Model.Id })" class="menu-item">Change</a>
                <a href="@Url.Action("DeleteAccount", "Home", new { userId = Model.Id })" class="menu-item" onclick="return confirm('Are you sure you want to delete your account?')">Delete Account</a>
            </div>
            <a href="/Home/LoginUser" class="menu-item">Logout</a>
        </div>

        <script src="personalinfo.js"></script>
    </div>
</body>
</html>
